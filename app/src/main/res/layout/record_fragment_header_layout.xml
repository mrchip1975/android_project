<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/start_img_btn"
        android:layout_height="@dimen/start_img_btn"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/headerRecordLabel"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rating" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/start_img_btn"
        android:layout_height="@dimen/start_img_btn"
        app:layout_constraintBottom_toBottomOf="@+id/headerRecordLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/headerRecordLabel"
        app:layout_constraintTop_toTopOf="@+id/headerRecordLabel"
        app:srcCompat="@drawable/ic_rating" />

    <TextView
        android:id="@+id/headerRecordLabel"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhaina"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/header_textcolour"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toStartOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />
</androidx.constraintlayout.widget.ConstraintLayout>